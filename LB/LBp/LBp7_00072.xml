<sentence type="verse"><ruby rubyText="あさ">朝</ruby><ruby rubyText="ゆ">夕</ruby><ruby rubyText="さ">さ</ruby><ruby rubyText="ん">も</ruby><ruby rubyText="う">御</ruby><ruby rubyText="すば">側</ruby><verseLine /><ruby rubyText="をぅが">拝</ruby><ruby rubyText="み">み</ruby><ruby rubyText="な">馴</ruby><ruby rubyText="り">れ</ruby><ruby rubyText="す">染</ruby><ruby rubyText="み">め</ruby><ruby rubyText="ぬ">の</ruby><verseLine /><ruby rubyText="さとぅ">里</ruby><ruby rubyText="や">や</ruby><ruby rubyText="たび">旅</ruby><ruby rubyText="し">せ</ruby><ruby rubyText="み">め</ruby><ruby rubyText="てぃ">て</ruby><verseLine /><ruby rubyText="いちゃ">如何</ruby><ruby rubyText="すぃ">す</ruby><ruby rubyText="ま">待</ruby><ruby rubyText="ち">ち</ruby><ruby rubyText="ゅ">ゆ</ruby><ruby rubyText="が">が</ruby><verseLine /></sentence>
